package com.flightbooking.common;

import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JPopupMenu;

public class ComboBoxWithButton {
	
public ComboBoxWithButton() {
	public static void main(String[] args) {
        JFrame frame = new JFrame("ComboBox with Button");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(300, 200);
        frame.setLayout(null);
        JComboBox<String> comboBox = new JComboBox<>();
        comboBox.addItem("Option 1");
        comboBox.addItem("Option 2");
        comboBox.addItem("Option 3");
        comboBox.setBounds(30, 30, 150, 30);
        comboBox.setVisible(false);
        frame.add(comboBox);

        JButton button = new JButton("Open ComboBox");
        button.setBounds(30, 70, 150, 30);
        frame.add(button);

        JPopupMenu popupMenu = new JPopupMenu();
        popupMenu.add(comboBox);

        button.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                if (!popupMenu.isVisible()) {
                    popupMenu.show(button, 0, button.getHeight());
                    comboBox.setPopupVisible(true);
                } else {
                    popupMenu.setVisible(false);
                    comboBox.setPopupVisible(false);
                }
            }
        });

        frame.setVisible(true);
}

}
