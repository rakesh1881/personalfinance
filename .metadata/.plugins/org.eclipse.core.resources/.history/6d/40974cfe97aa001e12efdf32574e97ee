package com.flightbooking.common;

import java.awt.Dimension;
import java.awt.FlowLayout;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JPasswordField;
import javax.swing.JTextField;

public class CommonValues extends JFrame {

	JPanel loginPanel;
	JLabel userNameLabel, passwordLabel;
	JButton loginButton, signUpButton;
	JTextField userNameText;
	JPasswordField passwordField;

	public CommonValues() {
		setTitle("LOGIN PAGE");
		setPreferredSize(new Dimension(656, 383));
		setBounds(0, 0, 656, 383);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setLayout(null);
		setLocationRelativeTo(null);
		loginformdetails();
		setVisible(true);

	}
	
	private void loginformdetails() {

		loginPanel = new JPanel();
		loginPanel.setBounds(0, 0, 656, 383);
		loginPanel.setLayout(null); // Using null layout
		add(loginPanel);

		userNameLabel = new JLabel("User Name");
		userNameLabel.setBounds(10, 10, 100, 20);
		loginPanel.add(userNameLabel);

		passwordLabel = new JLabel("Password");
		passwordLabel.setBounds(10, 40, 100, 20);
		loginPanel.add(passwordLabel);

		userNameText = new JTextField();
		userNameText.setBounds(110, 10, 100, 20);
		loginPanel.add(userNameText);

		passwordField = new JPasswordField();
		passwordField.setBounds(110, 40, 100, 20);
		loginPanel.add(passwordField);

//	    signUpButton = new JButton("Sign Up");
//	    signUpButton.setBounds(10, 50, 100, 20);
//	    signUpButton.setLayout(null);
//	    signUpButton.setVisible(true);
//	    loginPanel.add(signUpButton);
//	    
//	    loginButton = new JButton("Login");
//	    loginButton.setBounds(110, 50, 100, 20);
//	    loginButton.setLayout(null);
//	    loginButton.setVisible(true);
//	    loginPanel.add(loginButton);

	}

}
